<UserControl x:Class="TextEditor.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="100" Height="60">

                <Rectangle Height="56" Width="96" RadiusX="29" RadiusY="29" Fill="Gray" Name="back"/>
                <Ellipse Height="50" Width="50" Fill="White" HorizontalAlignment="Center" Name="Dot" MouseLeftButtonDown="Dot_MouseLeftButtonDown"></Ellipse>

            </Grid>
        </Viewbox>
        
    </Grid>
    
</UserControl>
